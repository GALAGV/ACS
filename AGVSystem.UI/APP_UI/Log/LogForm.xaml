<Window x:Class="AGVSystem.UI.APP_UI.Log.LogForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGVSystem.UI.APP_UI.Log"
        mc:Ignorable="d"
        Title="LogForm" Height="700" Width="1250" WindowState="Maximized" MinWidth="1100" MinHeight="600">
    <Window.Resources>
        <Style x:Key="FontAwesome">
            <Setter Property="TextElement.FontFamily" Value="pack://application:,,,/Styles/fonts/#FontAwesome" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border  Grid.Row="0" Background="#ffff">
                <Border Grid.Column="2" Grid.Row="2" Margin="3" BorderBrush="#898c95" Background="#ffff" BorderThickness="1,1,1,1">
                    <Grid Margin="0,2,0,2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="#bfcddb">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Image Stretch="Fill" Source="/image/equipment.png" Width="15" Height="15" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"></Image>
                            <Label Content="查询条件" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-2,-2.2,0,0" ></Label>
                        </Grid>
                        <Grid  Grid.Row="1" Height="50" >
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="90"></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition Width="90"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="90"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="90"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="220"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Content="查询日期：" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                            <DatePicker Grid.Column="1" Focusable="False" Height="25"  Name="DateTimes" VerticalContentAlignment="Center" DisplayDate="2018-09-16"></DatePicker>
                            <Label Content="开始时间" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
                            <TextBox Grid.Column="3" VerticalContentAlignment="Center" Height="25" ></TextBox>
                            <Label Content="结束时间" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
                            <TextBox Grid.Column="5" VerticalContentAlignment="Center" Height="25" ></TextBox>
                            <Label Content="AGV编号：" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="6"></Label>
                            <TextBox Grid.Column="7" VerticalContentAlignment="Center" Height="25" Name="AgvNum"></TextBox>
                            <Label Content="报警状态：" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="8"></Label>
                            <ComboBox Grid.Column="9" Height="25" VerticalContentAlignment="Center" SelectedIndex="0" HorizontalContentAlignment="Center" Name="MsgType">
                                <ComboBoxItem >全部</ComboBoxItem>
                                <ComboBoxItem >正常</ComboBoxItem>
                                <ComboBoxItem>报警</ComboBoxItem>
                            </ComboBox>
                            <Button Content="查询" BorderBrush="#adadad" Height="25" Grid.Column="10" Width="80" Margin="0,0,100,0" Name="Select" ></Button>
                            <Button Content="导出" BorderBrush="#adadad" Height="25" Grid.Column="10" Name="Open"  Width="80" Margin="100,0,0,0"></Button>
                        </Grid>
                    </Grid>
                </Border>
            </Border>


            <Border  Grid.Row="1" Background="#ffff">
                <Border Grid.Column="2" Grid.Row="2" Margin="3,3,3,2" BorderBrush="#898c95" Background="#ffff" BorderThickness="1,1,1,1">
                    <Grid Margin="0,2,0,2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="#bfcddb">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Image Stretch="Fill" Source="/image/equipment.png" Width="15" Height="15" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"></Image>
                            <Label Content="历史信息" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-2,-2,0,0" ></Label>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition Height="45"></RowDefinition>
                            </Grid.RowDefinitions>
                            <DataGrid x:Name="TabAgvMoveData" Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="#adadad"  AllowDrop="True" RowHeaderWidth="0"  ItemsSource="{Binding}" SelectionMode="Single" IsReadOnly="True" AutoGenerateColumns="False" >
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn   Width="80"  >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock   Text="{Binding agvStatic}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="状态" FontSize="12" Foreground="Black" Cursor="Hand"></TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="AGV编号" Binding="{Binding agvNumber}"   Width="*" FontWeight="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="电压"  Binding="{Binding Voltage}" Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="速度"  Binding="{Binding Speed}" Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="转弯" Binding="{Binding turn}"  Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="方向" Binding="{Binding Dir}"  Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="挂钩"  Binding="{Binding Hook}"  Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="信标"   Binding="{Binding RFID}" Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="线路号"  Binding="{Binding RouteNo}"  Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="扫描区域"  Binding="{Binding PBS}"  Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="步骤"   Binding="{Binding Step}" Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="程序号"   Binding="{Binding Program}" Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid Grid.Row="0" Panel.ZIndex="9" Margin="0,25,0,0" Height="200" >
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="&#xf002;" Foreground="Gray" FontSize="62" Style="{DynamicResource FontAwesome}" />
                                    <TextBlock Text="暂无数据！"  Foreground="Gray"  FontSize="50"  Margin="5,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                            </Grid>

                            <Grid  Grid.Row="1">


                                <Border >
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Label  Content="转到"/>
                                        <TextBox Width="50" Height="23" VerticalContentAlignment="Center" Text="{Binding JumpNum}" Name="IndexPs" />
                                        <Label  Content="页"/>
                                        <Button Height="23" Width="40" BorderBrush="#adadad" Name="Go"   Margin="0,0,20,0" Content="GO" Command="{Binding JumpPageCommand}"/>
                                        <Button  Height="23" Width="60"  Name="Up"  BorderBrush="#adadad" Margin="0,0,10,0" Content="上一页" Command="{Binding PrevPageCommand}"/>
                                        <Button  Height="23" Width="60" BorderBrush="#adadad"  Name="Next" Content="下一页" Command="{Binding NextPageCommand}"/>
                                        <Label  Content="每页"/>
                                        <ComboBox  HorizontalContentAlignment="Center" Height="23"   Name="PagSize" VerticalContentAlignment="Center"  SelectedIndex="1" Width="60" Margin="5,0,0,0" Background="White" >
                                            <ComboBoxItem>100</ComboBoxItem>
                                            <ComboBoxItem>200</ComboBoxItem>
                                            <ComboBoxItem>300</ComboBoxItem>
                                            <ComboBoxItem>400</ComboBoxItem>
                                            <ComboBoxItem>500</ComboBoxItem>
                                        </ComboBox>
                                        <Label  Content="条"/>
                                        <Label  Content="【当前"/>
                                        <Label Content="0" Foreground="Red" Name="PagIndex"/>
                                        <Label  Content="页】"/>
                                        <Label Content="【共"/>
                                        <Label  Content="0" Foreground="Red" Name="CountData"/>
                                        <Label  Content="页】"/>
                                        <Label  Content="【共"/>
                                        <Label  Name="Counts" Content="0" Foreground="Red"/>
                                        <Label  Content="条记录】"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                        </Grid>
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </Grid>
</Window>
