                        </StackPanel>
                    </Button.Content>
                </Button>-->
                <!--<Separator />-->
                <Label Content="地图:" ></Label>
                <ComboBox Width="125" SelectedIndex="0"   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Name="MapMenu" SelectionChanged="MapMenu_SelectionChanged" DisplayMemberPath="Name" SelectedValuePath="CreateTime">
                </ComboBox>
            </ToolBar>
            <Border Grid.Column="2" Grid.Row="2"   Background="#ffff" >
                <Border Grid.Column="2" Grid.Row="2" Margin="3,3,1,3" BorderBrush="#898c95" Background="#ffff" BorderThickness="1,1,1,1">
                    <Grid Margin="2,2,0,2" Background="#f0f0f0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"></RowDefinition>
                            <RowDefinition Height="20"></RowDefinition>
                            <RowDefinition ></RowDefinition>
                            <!--<RowDefinition  Height="10"></RowDefinition>-->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Grid.ColumnSpan="2" Background="#bfcddb">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"></ColumnDefinition>
                                <ColumnDefinition Width="50"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Image Stretch="Fill" Source="/image/map.png" Width="15" Height="15" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"></Image>
                            <Label Content="地图" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-4,-1.4,0,0" ></Label>
                        </Grid>
                        <ScrollViewer  Name="SrcX" Grid.Row="1" Grid.Column="1" HorizontalScrollBarVisibility="Hidden" Margin="-1,0,0,0">
                            <StackPanel >
                                <Canvas Name="TopX"  HorizontalAlignment="Left" Height="20" Width="20000"></Canvas>
                            </StackPanel>
                        </ScrollViewer>

                        <!--<ScrollViewer Name="SrcY" Grid.Row="2" Grid.Column="0"  VerticalScrollBarVisibility="Hidden" Margin="0,0,0,20">-->
                        <StackPanel Grid.Row="2" Grid.Column="0"  Margin="0,-1,0,20">
                            <Canvas Name="TopY" Width="20" HorizontalAlignment="Left" Height="1500"></Canvas>
                        </StackPanel>
                        <!--</ScrollViewer>-->


                        <ScrollViewer  Name="SrcCount" Grid.Column="1" Grid.Row="2"   HorizontalScrollBarVisibility="Visible"  VerticalScrollBarVisibility="Visible"   >

                            <Canvas  Name="mainPanel" Background="#ffffff" >

                            </Canvas>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Border>
            <Grid Grid.Column="0"  Grid.Row="2" Grid.RowSpan="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="0.8*" ></RowDefinition>
                    <!--<RowDefinition ></RowDefinition>-->

                </Grid.RowDefinitions>
                <Border  Grid.Row="0" Background="#ffff">
                    <Border Grid.Column="2" Grid.Row="2" Margin="3" BorderBrush="#898c95" Background="#ffff" BorderThickness="1,1,1,1">
                        <Grid Margin="0,2,0,2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="22"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Background="#bfcddb">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Image Stretch="Fill" Source="/image/equipment.png" Width="15" Height="15" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"></Image>
                                <Label Content="AGV" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-2,-0.5,0,0" ></Label>
                            </Grid>
                            <ScrollViewer  Grid.Row="1" HorizontalScrollBarVisibility="Visible" Name="agvlist" VerticalScrollBarVisibility="Visible" >
                            <!--<TreeView FontSize="15"    BorderThickness="0,0,0,0" Grid.Row="1">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="{x:Type TreeViewItem}">
                                        <Setter Property="IsExpanded" Value="True" />
                                    </Style>
                                </TreeView.ItemContainerStyle>
                                <TreeViewItem Header="agv" Name="agvlist">
                                    <TreeViewItem Header="agv-001" IsExpanded="True">
                                    </TreeViewItem>
                                    <TreeViewItem Header="agv-002">
   
                                    </TreeViewItem>
                                    <TreeViewItem Header="agv-003"></TreeViewItem>
                                    <TreeViewItem Header="agv-004"></TreeViewItem>
                                    <TreeViewItem Header="agv-005"></TreeViewItem>
                                    <TreeViewItem Header="agv-006"></TreeViewItem>
                                    <TreeViewItem Header="agv-007"></TreeViewItem>
                                    <TreeViewItem Header="agv-008"></TreeViewItem>
                                    <TreeViewItem Header="agv-009"></TreeViewItem>
                                </TreeViewItem>
                            </TreeView>-->
                              
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Border>
                <TabControl Grid.Row="1" Margin="3,0,0,0">
                    <TabItem Header="AGV信息">
                        <Border  Grid.Row="1" Background="#ffff" Margin="0,0,2,2">
                            <Border Grid.Column="2" Grid.Row="2" Margin="3,0,0,3" BorderBrush="#898c95" Background="#ffff" BorderThickness="1,1,1,1">
                                <Grid Margin="0,2,0,2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="22"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Background="#bfcddb">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Image Stretch="Fill" Source="/image/message.png" Width="15" Height="15" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"></Image>
                                        <Label Content="状态" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-1,-1,0,0" ></Label>
                                    </Grid>
                                    <DataGrid  HeadersVisibility="None"  BorderBrush="#808080" BorderThickness="0,1,0,0"  Name="TabAgvData"  AllowDrop="True" Grid.Row="1" ItemsSource="{Binding}" >
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header=""  Binding="{Binding StatusName}" Width="70" Foreground="{Binding ColorBg,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                                        <Setter Property="AllowDrop"  Value="False"></Setter>
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>
                                            <DataGridTemplateColumn  Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock  Foreground="{Binding ColorBg,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Text="{Binding StatusValue}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <!--<DataGridTextColumn Header="" Binding="{Binding StatusValue}"  Width="*" >
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                                        <Setter Property="AllowDrop"  Value="False"></Setter>
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>-->
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </Border>
                    </TabItem>
                    <TabItem Header="串口状态">
                        <Border  Grid.Row="2" Background="#ffff" Margin="0,0,2,0">
                            <Border Grid.Column="2" Grid.Row="2" Margin="3,0,0,3" BorderBrush="#898c95" Background="#ffff" BorderThickness="1,1,1,1">
                                <Grid Margin="0,2,0,2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="22"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Background="#bfcddb">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Image Stretch="Fill" Source="/image/COM.png" Width="15" Height="15" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"></Image>
                                        <Label Content="串口" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-1,-1,0,0" ></Label>
                                    </Grid>
                                    <DataGrid  BorderBrush="#808080" RowHeaderWidth="0" Name="SerialPortData" BorderThickness="0,1,0,0"  AllowDrop="True" Grid.Row="1"  ItemsSource="{Binding}" SelectionMode="Single" IsReadOnly="True" >
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="串口号" Width="*"  Binding="{Binding ComNumber}" >
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                                        <Setter Property="AllowDrop"  Value="False"></Setter>
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="类型" Width="*"  Binding="{Binding ComPortType}" >
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                                        <Setter Property="AllowDrop"  Value="False"></Setter>
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="状态" Binding="{Binding ComStatic}" Width="*" Foreground="Red" >
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                                        <Setter Property="AllowDrop"  Value="False"></Setter>
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </Border>
                    </TabItem>
                    <TabItem Header="网络状态">
                        <Border  Grid.Row="2" Background="#ffff" Margin="0,0,2,0">
                            <Border Grid.Column="2" Grid.Row="2" Margin="3,0,0,3" BorderBrush="#898c95" Background="#ffff" BorderThickness="1,1,1,1">
                                <Grid Margin="0,2,0,2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="22"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Background="#bfcddb">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Image Stretch="Fill" Source="/image/COM.png" Width="15" Height="15" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"></Image>
                                        <Label Content="网络" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-1,-1,0,0" ></Label>
                                    </Grid>
                                    <DataGrid  BorderBrush="#808080"  Name="TabSerialPortDatas" BorderThickness="0,1,0,0"  AllowDrop="True" Grid.Row="1" Cursor="Hand" ItemsSource="{Binding}" SelectionMode="Single" IsReadOnly="True" >
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="IP地址" Width="*"  Binding="{Binding COM}"  >
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                                        <Setter Property="AllowDrop"  Value="False"></Setter>
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="连接状态" Width="0.7*" Binding="{Binding Comtype}"   >
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                                        <Setter Property="AllowDrop"  Value="False"></Setter>
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                            </DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </Border>
                    </TabItem>
                </TabControl>

            </Grid>

            <Border  Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Background="#ffff" Margin="0,2,0,0">
                <Border Grid.Column="2" Grid.Row="2" Margin="2" BorderBrush="#898c95" Background="#ffff" BorderThickness="1,1,1,1">
                    <TabControl Grid.ColumnSpan="5">
                        <TabItem Header="运行信息">
                            <DataGrid x:Name="TabAgvMoveData"  AllowDrop="True" RowHeaderWidth="0"  ItemsSource="{Binding}" SelectionMode="Single" IsReadOnly="True" AutoGenerateColumns="False" >
                                <DataGrid.Columns>
                                    <!--<DataGridTextColumn Header="状态" Width="80" Binding="{Binding agvStatic}"  Foreground="Red" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                                <Setter Property="AllowDrop"  Value="False"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>-->
                                    <DataGridTemplateColumn   Width="80"  >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock  Foreground="{Binding ColorBg,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Text="{Binding agvStatic}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="状态" FontSize="12" Foreground="Black" Cursor="Cross"></TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="AGV编号" Binding="{Binding agvNumber}"   Width="*" FontWeight="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="电压"  Binding="{Binding Voltage}" Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="速度"  Binding="{Binding Speed}" Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="转弯" Binding="{Binding turn}"  Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="方向" Binding="{Binding Dir}"  Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="挂钩"  Binding="{Binding Hook}"  Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="信标"   Binding="{Binding RFID}" Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="线路号"  Binding="{Binding RouteNo}"  Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="扫描区域"  Binding="{Binding PBS}"  Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="步骤"   Binding="{Binding Step}" Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="程序号"   Binding="{Binding Program}" Width="*" Foreground="Black" >
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="日志输出">
                            <ScrollViewer  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <TextBox Name="txtLog" AcceptsReturn="True"  IsReadOnly="True" Text="2018-12-11 05:30:22 agvNum:5 start"
                 TextWrapping="Wrap" Foreground="#4682b4"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Border>
            </Border>
        </Grid>
    </Grid>
</Window>
