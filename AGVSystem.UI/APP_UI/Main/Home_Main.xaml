<Window x:Class="AGVSystem.UI.APP_UI.Main.Home_Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGVSystem.UI.APP_UI.Main"
        mc:Ignorable="d"
        Title="Home_Main" Height="900" Width="1400" WindowState="Maximized" MinWidth="750" MinHeight="600"  Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid Background="#f0f0f0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="32"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="2"></RowDefinition>
                <RowDefinition Height="0.26*" ></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="240" ></ColumnDefinition>
                <ColumnDefinition Width="4" ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Row="3"  HorizontalAlignment="Stretch" ShowsPreview="True"  Grid.ColumnSpan="3"  Height="2"></GridSplitter>
            <Menu HorizontalContentAlignment="Center" Name="Menu" Grid.Row="0" Grid.ColumnSpan="3" Background="#ffffff">
                <MenuItem Header="文件(_F)" Height="20" FontFamily="微软雅黑">
                    <!--<MenuItem Header="退出" Height="20"  Name="Exit" Click="Exit_Click">
                    </MenuItem>-->
                </MenuItem>
                <Separator Width="4" />
                <MenuItem Header="新建(_G)" Height="20" FontFamily="微软雅黑" Name="AddMapInfo" Click="AddMapInfo_Click">
                    <MenuItem Header="新建地图(_A)" Height="20" Width="150"></MenuItem>
                </MenuItem>
                <Separator Width="4" />
                <MenuItem Header="编辑(_K)" Height="20" FontFamily="微软雅黑" >
                    <MenuItem Header="编辑地图(_G)" Height="20" Name="Com_Map"  Click="Com_Map_Click" Width="150" ></MenuItem>
                    <MenuItem Header="编辑线路(_H)" Height="20" Width="150" Name="Edit" Click="Edit_Click"></MenuItem>
                    <MenuItem Header="编辑信标(_Q)" Height="20" Width="150"></MenuItem>
                </MenuItem>
                <Separator Width="4" />
                <MenuItem Header="设置(_E)" Height="20" FontFamily="微软雅黑">
                    <MenuItem Header="软件设置" Height="20" Width="150" Name="setting" Click="Setting_Click"></MenuItem>
                </MenuItem>
                <Separator Width="4" />
                <MenuItem Header="历史(_E)" Height="20" FontFamily="微软雅黑">
                    <MenuItem Header="历史信息" Height="20" Width="150"></MenuItem>
                </MenuItem>
                <Separator Width="4" />
                <MenuItem Header="帮助(_H)" Height="20" FontFamily="微软雅黑">
                    <MenuItem Header="关于软件(_A)" Height="20"></MenuItem>
                </MenuItem>
            </Menu>
            <ToolBar Grid.Row="1" Grid.ColumnSpan="3" Background="#f0f0f0" Loaded="ToolBar_Loaded">
                <Button Cursor="Hand"  Name="Open_Port" Click="Open_Port_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Stretch="Fill" Name="PortImg" Source="/image/start.png"/>
                            <TextBlock Name="PortText" Text="打开串口" Margin="5,0,0,0" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Separator />
                <Button Cursor="Hand" Name="StartBrainpower" Click="StartBrainpower_Click" IsEnabled="False">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Stretch="Fill" Source="/image/noopsyche.png" Name="StartImg"/>
                            <TextBlock Text="智能运行" Margin="5,0,0,0" FontSize="14"  Name="StartText" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Separator />
                <!--<Button Cursor="Hand">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Stretch="Fill" Source="/image/mouse.png"/>
                        </StackPanel>
                    </Button.Content>
                </Button>-->
                <!--<Separator />
                <Button Cursor="Hand">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Stretch="Fill" Source="/image/hand.png"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Separator />-->
                <!--<Button Cursor="Hand" Name="Magnify" >
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Stretch="Fill" Source="/image/Magnify.png"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Separator />-->
                <!--<Button Cursor="Hand" Name="Shrink"  >
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Stretch="Fill" Source="/image/shrink.png"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Separator />
                <Button Cursor="Hand" Name="Recover" >
                    <Button.Content >
                        <StackPanel Orientation="Horizontal">
                            <Image Stretch="Fill" Source="/image/restoration.png"/>
                        </StackPanel>
                    </Button.Content>
